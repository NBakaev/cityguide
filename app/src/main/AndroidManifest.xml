<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.nbakaev.cityguide">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.LOCATION_HARDWARE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"></uses-permission>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".App"
        android:theme="@style/MaterialTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <receiver
            android:name=".push.BroadcastReceiverOnBootComplete"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <service android:name=".push.BackgrounNotificationService"
            android:enabled="true"
            ></service>
        <activity
            android:name="ru.nbakaev.cityguide.MainActivity"
            android:theme="@style/splashScreenTheme"
            android:label="@string/title_activity_maps">
            android:launchMode="singleTop"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="ru.nbakaev.cityguide.IntroActivity"
            android:label="@string/title_activity_maps"></activity>

        <activity
            android:name="ru.nbakaev.cityguide.NearbyFragment"
            android:label="@string/title_activity_maps"></activity>
        <activity
            android:name="ru.nbakaev.cityguide.CitiesActivity"
            android:label="@string/title_activity_maps"></activity>

        <activity
            android:name="ru.nbakaev.cityguide.about.AboutActivity"
            android:label="@string/title_activity_build"></activity>

        <activity
            android:name="ru.nbakaev.cityguide.QrReadActivity"
            android:parentActivityName=".MapsFragment"
            android:label="@string/title_activity_maps">

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="https"
                    android:host="s2.nbakaev.ru"
                    />
            </intent-filter>
        </activity>


    </application>

</manifest>